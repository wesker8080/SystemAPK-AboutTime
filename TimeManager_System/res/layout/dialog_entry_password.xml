<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    >
    <include
        layout="@layout/layout_top_view">
    </include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPassword"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="70dp"
        android:paddingBottom="70dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_to_unlock_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/entry_password_to_unlock"/>
        <EditText
            android:id="@+id/et_unlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:inputType="numberPassword"
            android:maxLines="1"
            android:maxLength="12"
            android:hint="@string/entry_password_to_unlock_tip"/>
    </LinearLayout>

</LinearLayout>