<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorCheckBox">

    <include
        layout="@layout/layout_top_view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorText"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">
        <RelativeLayout
            android:id="@+id/rl_period_time_start"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_period_time_start_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_period_time_start"
                android:textSize="17sp"
                android:textColor="@color/colorPeriodText"/>
            <TextView
                android:id="@+id/tv_period_time_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00"
                android:textColor="@color/colorPeriodText"
                android:layout_alignParentEnd="true"
                android:textSize="17sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_period_time_end"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_period_time_end_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_period_time_end"
                android:textColor="@color/colorPeriodText"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/tv_period_time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:00"
                android:textColor="@color/colorPeriodText"
                android:layout_alignParentEnd="true"
                android:textSize="17sp"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorCheckBox"
        android:orientation="vertical">
        <CheckBox
            android:id="@+id/cb_period_time_repeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_period_time_repeat"
            android:layout_marginStart="20dp"
            android:checked="true"
            />
        <LinearLayout
            android:id="@+id/repeat_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_below="@+id/cb_period_time_repeat"
            >
            <CheckBox
                android:id="@+id/day_button_box_sun"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/toggle_circle"
                android:button="@null"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="#000"
                android:checked="true"
                android:text="@string/set_period_time_sun"/>
            <CheckBox
                android:id="@+id/day_button_box_mon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/toggle_circle"
                android:button="@null"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="#000"
                android:checked="true"
                android:text="@string/set_period_time_mon"/>
            <CheckBox
                android:id="@+id/day_button_box_tue"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/toggle_circle"
                android:button="@null"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="#000"
                android:checked="true"
                android:text="@string/set_period_time_tue"/>
            <CheckBox
                android:id="@+id/day_button_box_wed"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/toggle_circle"
                android:button="@null"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="#000"
                android:checked="true"
                android:text="@string/set_period_time_wed"/>
            <CheckBox
                android:id="@+id/day_button_box_thu"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/toggle_circle"
                android:button="@null"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="#000"
                android:checked="true"
                android:text="@string/set_period_time_thu"/>
            <CheckBox
                android:id="@+id/day_button_box_fri"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/toggle_circle"
                android:button="@null"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="#000"
                android:checked="true"
                android:text="@string/set_period_time_fri"/>
            <CheckBox
                android:id="@+id/day_button_box_sat"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/toggle_circle"
                android:button="@null"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="#000"
                android:checked="true"
                android:text="@string/set_period_time_sat"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>